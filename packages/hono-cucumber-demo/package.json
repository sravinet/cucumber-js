{
  "name": "@cucumber/hono-cucumber-demo",
  "version": "0.1.0",
  "description": "Demo of Hono with Cucumber BDD tests running in Cloudflare Workers",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "pretest": "pnpm run build-cucumber-workers",
    "build-cucumber-workers": "cd ../cucumber-workers && pnpm run build",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "setup": "node setup.js",
    "postinstall": "node -e \"console.log('Installation complete! Run \\'pnpm run dev\\' to start the app or \\'pnpm test\\' to run tests.')\""
  },
  "dependencies": {
    "hono": "^3.12.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@cucumber/cucumber-workers": "workspace:*",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^0.34.6",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}